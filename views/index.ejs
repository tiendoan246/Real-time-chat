    <script>
        $(function() {
            var socket = io();
            
            socket.on("chat-message", function (msg) {
                var _box_message = $('.chat-single-box').find('.messages');
                _box_message.append('<div class="message out no-avatar media">' +
                '<div class="body media-body text-right p-l-50"><div class="content msg-reply f-12 bg-primary d-inline-block">'+ msg +'</div><div class="seen"><i class="icon-clock f-12 m-r-5 txt-muted d-inline-block"></i><span><p class="d-inline-block">a few seconds ago </p></span><div class="clear"></div> </div></div>' +
                ' <div class="sender media-right friend-box"><a href="javascript:void(0);" title="Your"><img src="/files/assets/images/avatar-2.jpg" class=" img-chat-profile" alt="Me"></a> </div>' +
                '</div>');
            });

            $(document).on('click', '#main-chat #paper-btn', function (e) {
                var text= $($(e.currentTarget).parent().parent().parent()).find(".input-value").val();
                $($(e.currentTarget).parent().parent().parent()).find(".input-value").val('');
                // sending to all clients except sender
                socket.emit('chat-message', text);
                return false;
            }); 
        });
    </script>
